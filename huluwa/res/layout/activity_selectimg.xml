<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ff495a" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="写动态"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/activity_selectimg_send"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text="发送"
            android:textColor="@drawable/text_while"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="68dp"
        android:layout_marginBottom="88dp"
        android:orientation="vertical">
	    <EditText
	        android:id="@+id/message"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="8dp"
	        android:gravity="left|top"
	        android:minLines="5"
	        android:maxLines="10"
	        android:hint="我叫你一声你敢答应么？二娃！～～～"       
	        android:background="@null" >
	    </EditText>
	    <GridView 
	        android:id="@+id/noScrollgridview"
	        android:layout_width="match_parent"
	        android:layout_height="350dp"
	        android:padding="5dp"
	        android:horizontalSpacing="3dp"        
	        android:numColumns="5"
	        android:scrollbars="none"
	        android:verticalSpacing="5dp" >
	    </GridView>
    </LinearLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="80dp"
	    android:background="#ff495a"
	    android:gravity="center_horizontal"
	    android:layout_alignParentBottom="true"
	    >
	    <ImageButton 
	        android:id="@+id/btn_renren"
	        android:layout_width="60dp"
	        android:layout_height="60dp"
	        android:layout_margin="10dp"
	        android:src="@drawable/logo_renren_2"/>
	    <ImageButton 
	        android:id="@+id/btn_qzone"
	        android:layout_width="60dp"
	        android:layout_height="60dp"
	        android:layout_margin="10dp"
	        android:src="@drawable/logo_qzone_2"/>
	</LinearLayout>
</RelativeLayout>